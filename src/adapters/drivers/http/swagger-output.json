{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "My API",
    "description": "Some description..."
  },
  "servers": [
    {
      "url": "http://localhost:3333"
    }
  ],
  "paths": {
    "/users/": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "description": "",
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "User info",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "john doe"
                },
                "email": {
                  "type": "string",
                  "example": "mail@mail.com"
                },
                "password": {
                  "type": "string",
                  "example": "teste123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/payments/": {
      "post": {
        "tags": [
          "Payments"
        ],
        "summary": "Create a new payment",
        "description": "",
        "parameters": [
          {
            "name": "Payment",
            "in": "body",
            "description": "Payment info",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "total_amount": {
                  "type": "number",
                  "example": 140000
                },
                "order_id": {
                  "type": "string",
                  "example": "nb-order-id"
                },
                "card": {
                  "type": "object",
                  "properties": {
                    "number": {
                      "type": "string",
                      "example": "123456789"
                    },
                    "exp": {
                      "type": "string",
                      "example": "12/2020"
                    },
                    "cvc": {
                      "type": "number",
                      "example": 121
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}