generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}


model Payment {
  id       String @id
  order_id String

  total_amount Decimal
  created_at   DateTime @default(now())

  @@map("payments")
}

model Produto {
  id            String  @id
  nome          String
  categoria     Categoria
  preco         Decimal
  descricao     String
  imagem        String
  deleted       Boolean @default(false)

  @@map("products")
}

enum Categoria {
  Lanche
  Acompanhamento
  Bebida
  Sobremesa

  @@map("categories")
}

