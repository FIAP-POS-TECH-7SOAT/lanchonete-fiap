generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Client {
  id            String   @id @default(uuid())
  name          String
  email         String   @default("")
  cpf           String   @unique
  status        Boolean  @default(true)
  created_at    DateTime @default(now())

  @@map("clients")
}