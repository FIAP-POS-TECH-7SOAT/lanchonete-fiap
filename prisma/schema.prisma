generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Client {
  id            String   @id
  name          String
  email         String   @default("")
  cpf           String   @unique
  status        Boolean  @default(true)
  created_at    DateTime @default(now())

  orders        Order[]
  @@map("clients")
}

model Payment {
  id       String @id
  order_id String

  total_amount Decimal
  created_at   DateTime @default(now())

  @@map("payments")
}

model Produto {
  id            String  @id
  nome          String
  categoria     Categoria
  preco         Decimal
  descricao     String
  imagem        String
  deleted       Boolean @default(false)

  @@map("products")
}

model Order {
  
  id            String 
  client_id     String
  product_id    String
  amount        Int
  status        String   @default("Recebido")
  created_at    DateTime @default(now())

  client Client   @relation(fields: [client_id], references: [id])
  
  @@id([id,client_id, product_id])
  @@map("orders")
}

enum Categoria {
  LANCHE
  ACOMPANHAMENTO
  BEBIDA
  SOBREMESA

  @@map("categories")
}

